@model IEnumerable<YAKBAKv2.Models.Clan>

@{
    ViewData["Title"] = "Clans";
}

<h1>Clans</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" class="btn btn-primary mb-3">Add New Clan</a>
    }
</p>

<div class="row">
    @foreach (var clan in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@clan.ClanName</h5>
                    <p class="card-text">@clan.ClanDescription</p>
                </div>
                <div class="card-footer d-flex flex-column align-items-start">
                    <a asp-action="Details" asp-route-id="@clan.ClanId" class="btn btn-primary mb-2 w-100">Details</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@clan.ClanId" class="btn btn-secondary mb-2 w-100">Edit</a>
                        <a asp-action="Delete" asp-route-id="@clan.ClanId" class="btn btn-danger w-100">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
